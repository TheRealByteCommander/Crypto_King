MONGO_URL="mongodb://localhost:27017"
DB_NAME="cyphertrade_db"
CORS_ORIGINS="*"

# Binance API Configuration (PLEASE FILL IN YOUR KEYS)
BINANCE_API_KEY="your_binance_api_key_here"
BINANCE_API_SECRET="your_binance_api_secret_here"
BINANCE_TESTNET=true

# LLM Configuration - One per Agent
# NexusChat Agent (User Interface)
NEXUSCHAT_LLM_PROVIDER="openai"
NEXUSCHAT_API_KEY="your_openai_api_key_here"
NEXUSCHAT_MODEL="gpt-4"

# CypherMind Agent (Decision & Strategy)
CYPHERMIND_LLM_PROVIDER="openai"
CYPHERMIND_API_KEY="your_openai_api_key_here"
CYPHERMIND_MODEL="gpt-4"

# CypherTrade Agent (Trade Execution)
CYPHERTRADE_LLM_PROVIDER="openai"
CYPHERTRADE_API_KEY="your_openai_api_key_here"
CYPHERTRADE_MODEL="gpt-4"

# Trading Configuration
DEFAULT_STRATEGY="ma_crossover"
DEFAULT_SYMBOL="BTCUSDT"
DEFAULT_AMOUNT=100
MAX_POSITION_SIZE=1000
RISK_PER_TRADE=0.02

# Notification Configuration (Optional)
